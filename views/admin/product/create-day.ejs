<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Day</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Product</a></li>
            <li class="breadcrumb-item active">Tambah Day</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form tambah Days</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/product/create-day/<%= product._id %>" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label for="time">Time</label>
                  <input
                    type="text"
                    name="time"
                    class="form-control"
                    id="time"
                    placeholder="Masukan Waktu "
                    required
                  />
                </div>

                <div class="form-group">
                  <label for="desc">Description</label>
                  <input
                    type="text"
                    name="desc"
                    class="form-control"
                    id="desc"
                    placeholder="Masukan Description"
                    required
                  />
                </div>
              </div>

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
