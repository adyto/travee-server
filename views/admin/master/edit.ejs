option<%- include ../../partials/header.ejs %> <%- include
../../partials/navbar.ejs %> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Admin</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/master">Master</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form tambah Admin</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form
              action="/master/edit/<%= admin._id %>?_method=PUT"
              method="post"
            >
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Admin</label>
                  <input
                    type="text"
                    name="name"
                    class="form-control"
                    id="name"
                    value="<%= admin.name %>"
                    placeholder="Masukan Nama Admin"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="email">Email Admin</label>
                  <input
                    type="text"
                    name="email"
                    class="form-control"
                    id="email"
                    value="<%= admin.email %>"
                    placeholder="Masukan Email Admin"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="phoneNumber">Phone Number</label>
                  <input
                    type="text"
                    name="phoneNumber"
                    class="form-control"
                    id="phoneNumber"
                    value="<%= admin.phoneNumber %>"
                    placeholder="Masukan Phone Number Admin"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="phoneNumber">Password</label>
                  <input
                    type="text"
                    name="password"
                    class="form-control"
                    id="password"
                    value="<%= admin.password %>"
                    placeholder="Masukan Password Admin"
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Role</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="role"
                    required
                  >
                    <option selected="selected"><%= admin.role %></option>
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                  </select>
                </div>
              </div>

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
